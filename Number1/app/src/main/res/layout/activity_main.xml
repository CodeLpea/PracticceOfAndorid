<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<!-- 简单的测试界面-->
<!-- 一个垂直的LinearLayout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 再来一个水平方向的LinearLayout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- 开启服务的按钮-->
            <Button
                android:id="@+id/btn_open_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bin绑定服务"
                />
            <!-- 关闭服务的按钮-->
            <Button
                android:id="@+id/btn_close_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unbind关闭服务"
                />
        </LinearLayout>
        <!-- 再来一个水平方向的LinearLayout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- 开启服务的按钮-->
            <Button
                android:id="@+id/btn_Service_Commond_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="startService服务通信"
                />
            <!-- 关闭服务的按钮-->
            <Button
                android:id="@+id/btn_Service_Commond_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="startService关闭服务"
                />
        </LinearLayout>
        <!-- 再来一个水平方向的LinearLayout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- 开启服务的按钮-->
            <Button
                android:id="@+id/btn_to_intentService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用intentService开启服务的界面"
                />

        </LinearLayout>
        <!-- 再来一个水平方向的LinearLayout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- 开启服务的按钮-->
            <Button
                android:id="@+id/btn_to_async_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用AsynvTask进行简单的异步操作界面"
                />

        </LinearLayout>
        <!-- 再来一个水平方向的LinearLayout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- 开启服务的按钮-->
           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/tv_info"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="15dp"
                   android:textColor="#111"
                   android:text="Service中的进行信息/可滑动查看\n"
                   />
           </ScrollView>

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>